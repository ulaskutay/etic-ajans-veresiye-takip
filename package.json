{
  "name": "masaustu-veresiye-takip",
  "version": "1.2.7",
  "description": "Kısayol tuşları ile hızlı çalışan masaüstü veresiye takip uygulaması",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-builder --publish=never",
    "build-win": "electron-builder --win --publish=never",
    "build-mac": "electron-builder --mac --publish=never",
    "build-linux": "electron-builder --linux --publish=never",
    "seed:v0": "node seed-data.js v0",
    "seed:v1": "node seed-data.js v1",
    "seed:v2": "node seed-data.js v2",
    "seed:clear": "node seed-data.js clear",
    "seed:list": "node seed-data.js list",
    "test:migration": "node -e \"require('./migration-manager').initializeMigrationManager().then(m => m.testMigrations())\"",
    "prepare-release": "./prepare-release.sh"
  },
  "keywords": [
    "veresiye",
    "takip",
    "masaüstü",
    "electron",
    "cari"
  ],
  "author": "Etic Ajans",
  "license": "MIT",
  "type": "commonjs",
  "build": {
    "appId": "com.eticajans.veresiye-takip",
    "productName": "Veresiye Takip",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "alert-system.js",
      "product-module.js",
      "product-management-new.js",
      "excel-import-export.js",
      "data-manager.js",
      "config-manager.js",
      "backup-manager.js",
      "migration-manager.js",
      "logger.js",
      "splash.html",
      "build/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "artifactName": "VeresiyeTakip-Setup-${version}.${ext}"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "artifactName": "VeresiyeTakip-${version}.${ext}",
      "category": "public.app-category.business",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "artifactName": "VeresiyeTakip-${version}.${ext}"
    }
  },
  "devDependencies": {
    "electron": "^25.9.8",
    "electron-builder": "^26.0.12",
    "sqlite3": "^5.1.7"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^12.4.1",
    "xlsx": "^0.18.5"
  }
}
